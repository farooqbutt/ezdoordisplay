@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password?";
    ViewData["width"] = "250";
    ViewData["height"] = "70";
}


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <section class="h-100 p-3 bg-light border rounded-3">
            <center>
                <partial name="_EzDoorDisplayLogo" view-data="ViewData" />
            </center>
            <h1>@ViewData["Title"]</h1>
            <h2>Enter your email.</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger form-text"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger form-text"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
