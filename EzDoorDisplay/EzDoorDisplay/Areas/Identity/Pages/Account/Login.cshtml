@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["width"] = "250";
    ViewData["height"] = "70";
}


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <section class="h-100 p-3 bg-light border rounded-3">
            <form id="account" method="post">
                <center>
                    <partial name="_EzDoorDisplayLogo" view-data="ViewData" />
                    <h1 class="h3 mb-3 fw-normal">Log in</h1>
                    <hr />
                </center>
                <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="form-text text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="form-text text-danger"></span>
                </div>
                <div>
                    <a class="form-text text-danger" style="float:right;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>
                </div>
                <div>
                    <a class="form-text" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create New Account</a>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
