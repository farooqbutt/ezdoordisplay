@{
    ViewData["Title"] = "Home Page";
}

<style>
    .underline {
        position: relative;
        display: inline-block;
    }

    .underline::before {
        content: '';
        position: absolute;
        bottom: 5px;
        left: 0;
        width: 0;
        height: 3px;
        background-color: #f31515; /* Change this to the desired underline color */
        transition: width 1.5s ease; /* Adjust the transition duration and timing function as needed */
    }

    .underline:hover::before {
        width: 100%;
    }

    .cabinetImage{
        width:755.2px;
        height:400px;
    }
</style>


<div class="p-5 bg-body-tertiary rounded-3">
    <p style="float:right;">
        <img src="~/images/ezdoor-logo.svg" height="100" />
    </p>
    <h1 class="display-4 underline">Too Many Sample Doors? </h1>
    <h1 class="display-5 underline">Too <span style="color:#f31">Little</span> Space?</h1>
    <p class="lead">
        We have the solution for you! Specifically designed for kitchen showroom cabinet door sample,
        the <span class="underline"><b>EZDoorDisplay</b></span> System can be used to hang cabinet sample doors, color blocks, or hardware boards.
    </p>
    <p class="lead">
        It can hold up to 30 doors in only a 45" wide space. Easy to install, flexible design, and perfect for
        all showrooms!
    </p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Visit our Gallery <i class="bi bi-arrow-right"></i></a>
    </p>
</div>

<div id="carouselExampleIndicators" class="carousel slide carousel-fade mt-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner rounded-3">
        <div class="carousel-item active">
            <img src="https://www.ezdoordisplay.com/images/Home_image3.JPG" class="d-block w-100 cabinetImage" alt="...">
            <div class="container">
                <div class="carousel-caption text-center">
                    <p><a class="btn btn-lg btn-outline-light" href="/Shop">Shop Now <i class="bi bi-shop"></i></a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://www.ezdoordisplay.com/images/ezdoordisplay-gallery-1.png" class="d-block w-100 cabinetImage" alt="...">
            <div class="container">
                <div class="carousel-caption text-center">
                    <p><a class="btn btn-lg btn-outline-light" href="/Shop">Shop Now <i class="bi bi-shop"></i></a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://www.ezdoordisplay.com/images/ezdoordisplay-gallery-5.png" class="d-block w-100 cabinetImage" alt="...">
            <div class="container">
                <div class="carousel-caption text-center">
                    <p><a class="btn btn-lg btn-outline-light" href="/Shop">Shop Now <i class="bi bi-shop"></i></a></p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="row flex-lg-row-reverse align-items-center mt-4">
    <div class="col-10 col-sm-8 col-lg-6">
        <img src="https://www.ezdoordisplay.com/images/protection-pad.jpg" class="d-block mx-lg-auto img-fluid rounded-3 cabinetImage">
    </div>
    <div class="col-lg-6">
        <span class="badge rounded-pill text-bg-danger" style="rotate:-20deg;margin-left:-20px">New Product</span>
        <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Sample Door Protection Pads</h1>
        <p class="lead">
